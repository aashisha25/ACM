<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:background="@drawable/back">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_above="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

    <View
        android:id="@+id/anc_view"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:elevation="8dp"
        android:background="@drawable/toolbar_background"/>

    <LinearLayout
        android:id="@+id/menuLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:baselineAligned="false"
        android:elevation="8dp"
        android:orientation="horizontal"
        app:layout_anchor="@id/anc_view"
        app:layout_anchorGravity="bottom">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_achievements"
                android:backgroundTint="#fff"
                android:src="@drawable/ic_baseline_achivements_24"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="10dp"
                app:borderWidth="0dp"
                app:fabCustomSize="72dp"
                app:maxImageSize="36dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_events"
                android:backgroundTint="#fff"
                android:src="@drawable/ic_baseline_event_note_24"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="10dp"
                app:borderWidth="0dp"
                app:fabCustomSize="72dp"
                app:maxImageSize="36dp"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_team"
                android:backgroundTint="#fff"
                android:src="@drawable/ic_baseline_team_24"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="10dp"
                app:borderWidth="0dp"
                app:fabCustomSize="72dp"
                app:maxImageSize="36dp"
                />
        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <RelativeLayout
            android:id="@+id/aboutInstitute"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="88dp">
            <TextView
                android:id="@+id/aboutInstituteHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="About Institute"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_below="@+id/aboutInstituteHeader"
                android:textSize="16sp"
                android:padding="8dp"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/aboutInstitute"/>
        </RelativeLayout>

            <RelativeLayout
                android:id="@+id/aboutACM"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/aboutInstitute">
            <TextView
                android:id="@+id/aboutACMHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="About ACM"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_below="@+id/aboutACMHeader"
                android:textSize="16sp"
                android:padding="8dp"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/aboutACM"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/event"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/aboutACM">

                <ProgressBar
                    android:id="@+id/progressHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/homeEvents"
                    android:layout_centerHorizontal="true"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/homeEvents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Some Recent Events"
                    android:layout_margin="8dp"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/homeSeeAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See All"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/homeRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/homeEvents"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager">
                </androidx.recyclerview.widget.RecyclerView>

            </RelativeLayout>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
</ScrollView>